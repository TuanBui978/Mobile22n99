<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="spinner_drop_down_item_style" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:radius">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="marginHorizontal">0dp</item>
        <item name="background">@drawable/radius_transparent_background_corners_8dp</item>
    </style>

    <style name="spinner_item_style" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:ellipsize">marquee</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>
</resources>