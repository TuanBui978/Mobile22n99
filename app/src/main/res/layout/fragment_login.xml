<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/loginFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.login.LoginFragment"
    android:orientation="vertical">



    <TextView
        android:layout_width="334dp"
        android:layout_height="75dp"
        android:text="@string/welcome_back"
        android:fontFamily="@font/pixelify_sans"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:lineHeight="38.4dp"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo_tsuki"
        android:layout_gravity="center"
        android:contentDescription="@null"
        />

    

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/username_email"
        android:textStyle="bold"
        android:lineHeight="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        />
    <EditText
        android:id="@+id/emailEditTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/light_pink_coner_background_item"
        android:hint="@string/example_gmail_com"
        android:textColor="#4D4D4D"
        android:inputType="textEmailAddress"
        android:textSize="20sp"
        android:lineHeight="24dp"
        android:textColorHint="@color/white"
        android:autofillHints="emailAddress"
        android:layout_marginBottom="13dp"
        android:maxLines="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:lineHeight="24dp"
        android:height="24dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"/>
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/light_pink_coner_background_item"
        android:hint="@string/password"
        android:textColor="#4D4D4D"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:lineHeight="24dp"
        android:textColorHint="@color/white"
        android:autofillHints="password"
        android:layout_marginBottom="13dp"
        android:maxLines="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineHeight="16.8dp"
        android:textSize="14sp"
        android:text="@string/forgot_password"
        android:textColor="#753532"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="13dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="13dp">
        <CheckBox
            android:layout_width="24dp"
            android:layout_height="24dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remember_me"
            android:textSize="14sp"
            android:lineHeight="16.8dp"/>

    </LinearLayout>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signInButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:text="@string/sign_in"
        android:textSize="24sp"
        android:lineHeight="28.8dp"
        android:textFontWeight="700"
        android:textColor="#7C7C7C"
        android:shadowColor="#4D4D4D"
        android:shadowRadius="3"
        android:shadowDy="0"
        android:shadowDx="0"
        android:background="#D9D9D9"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp">
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:dividerColor="#7C7C7C"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:lineHeight="16.8dp"
            android:layout_margin="5dp"
            />
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:dividerColor="#7C7C7C"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        >
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/byGoogleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/google_icon"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:layout_marginEnd="63dp"/>
        <ImageButton
            android:id="@+id/byFacebookButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook_icon"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:layout_marginEnd="63dp"
            />
        <ImageButton
            android:id="@+id/byAppleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/apple_icon"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/registerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/you_don_t_have_an_account_sign_up"
        android:lineHeight="16.8dp"
        android:textSize="14sp"
        android:textStyle="bold"
        />

</LinearLayout>